	</form>
</div>
<a href="/main/reset">RESET!</a>

<% if session[:gold] %>
	<h3> Your gold: <%= session[:gold] %> </h3>
	<% session[:logs].each do |log| %>
		<p><%= log %></p>
	<% end %>
<% end %>
